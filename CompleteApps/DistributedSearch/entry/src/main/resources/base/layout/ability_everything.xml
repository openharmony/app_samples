<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="780vp"
    ohos:width="360vp"
    ohos:background_element="#ffffff"
    ohos:orientation="vertical">
    <Component
        ohos:height="16vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Component
            ohos:height="40vp"
            ohos:width="8vp"
            ohos:background_element="#ffffff"/>
        <TextField
            ohos:height="40vp"
            ohos:width="284vp"
            ohos:id="$+id:textEntry"
            ohos:background_element="$graphic:background_text_field"
            ohos:hint="$string:Enter_the_key_to_search"
            ohos:text_alignment="vertical_center"
            ohos:text_size="24vp"
            ohos:start_padding="8vp"
            ohos:end_padding="24vp"
            ohos:bottom_padding="8vp"
            ohos:multiple_lines="false"
            />
        <Component
            ohos:height="40vp"
            ohos:width="16vp"
            ohos:background_element="#ffffff"/>
        <Image
            ohos:height="40vp"
            ohos:width="40vp"
            ohos:id="$+id:searchButton"
            ohos:image_src="$media:icon_search"
            ohos:alpha="0.5"
            ohos:clickable="true"
            />
    </DirectionalLayout>
    <Component
        ohos:height="24vp"
        ohos:width="360vp"
        ohos:background_element="#ffffff"/>
    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="360vp"
        ohos:orientation="horizontal"
        >
        <Component
            ohos:height="40vp"
            ohos:width="16vp"
            ohos:background_element="#ffffff"/>
        <RadioContainer
            ohos:id="$+id:radio_container"
            ohos:height="40vp"
            ohos:width="344vp"
            ohos:layout_alignment="left"
            ohos:orientation="horizontal"
            ohos:top_margin="0vp"
            ohos:start_margin="0vp"
            ohos:end_margin="0vp">
            <RadioButton
                ohos:id="$+id:sel_image"
                ohos:height="40vp"
                ohos:width="65vp"
                ohos:text="$string:image_label"
                ohos:text_size="16vp"
                ohos:clickable="true"
                ohos:text_color="#808080"
                ohos:text_alignment="vertical_center"
                ohos:text_color_on="#000000"
                />
            <RadioButton
                ohos:id="$+id:sel_audio"
                ohos:height="40vp"
                ohos:width="65vp"
                ohos:text="$string:audio_label"
                ohos:text_size="16vp"
                ohos:clickable="true"
                ohos:text_color="#808080"
                ohos:text_alignment="vertical_center"
                ohos:selection_color="#000000"
                />
            <RadioButton
                ohos:id="$+id:sel_video"
                ohos:height="40vp"
                ohos:width="65vp"
                ohos:text="$string:video_label"
                ohos:text_size="16vp"
                ohos:clickable="true"
                ohos:text_color="#808080"
                ohos:text_alignment="vertical_center"
                ohos:selection_color="#000000"
                />
            <RadioButton
                ohos:id="$+id:sel_text"
                ohos:height="40vp"
                ohos:width="65vp"
                ohos:text="$string:text_label"
                ohos:text_size="16vp"
                ohos:clickable="true"
                ohos:text_color="#808080"
                ohos:text_alignment="vertical_center"
                ohos:selection_color="#000000"
                />
            <RadioButton
                ohos:id="$+id:sel_all"
                ohos:height="40vp"
                ohos:width="65vp"
                ohos:text="$string:all_label"
                ohos:text_size="16vp"
                ohos:clickable="true"
                ohos:text_color="#808080"
                ohos:text_alignment="vertical_center"
                ohos:selection_color="#000000"
                />
        </RadioContainer>
    </DirectionalLayout>

    <Component
        ohos:height="14vp"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFF"/>
    <Component
        ohos:height="8vp"
        ohos:width="match_parent"
        ohos:background_element="#EDEDED"/>
    <Component
        ohos:height="24vp"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFF"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="480vp"
        ohos:width="360vp"
        ohos:orientation="vertical">
        <ListContainer
            ohos:height="480vp"
            ohos:width="360vp"
            ohos:id="$+id:listview"
            ohos:layout_alignment="left"
            ohos:visibility="hide"
            />
        <Text
            ohos:height="480vp"
            ohos:width="360vp"
            ohos:id="$+id:result_info"
            ohos:text_alignment="center"
            ohos:hint="$string:result_info_label"
            ohos:text_size="24vp"
            ohos:text_color="#ffffff"
            ohos:background_element="#ffffff"
            />
    </DirectionalLayout>
    <Image
        ohos:height="32vp"
        ohos:width="32vp"
        ohos:id="$+id:AnimaBttn"
        ohos:clickable="true"
        ohos:background_element="$graphic:background_button"
        ohos:layout_alignment="right"
        ohos:image_src="$media:zhankai"
        />
    <Button
        ohos:height="40vp"
        ohos:width="84vp"
        ohos:id="$+id:deviceBttn"
        ohos:clickable="true"
        ohos:background_element="$graphic:background_button"
        ohos:text="$string:button_distributed_device"
        ohos:text_size="24vp"
        ohos:text_alignment="center"
        ohos:layout_alignment="right"
        />
</DirectionalLayout>